# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Shell scripts should use LF
*.sh text eol=lf

# Batch scripts should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar.gz binary
*.whl binary
